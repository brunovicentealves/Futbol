<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/layoutjogadores"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/tvListaNome"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:hint="Nome : " />
        <TextView
            android:id="@+id/tvListaPosicao"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:hint="Posição : " />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvListaNumeroCamiseta"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:hint="NumeroCamisa : " />
        <TextView
            android:id="@+id/tvListaIDtime"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:hint="ID Time : " />

    </LinearLayout>

</LinearLayout>